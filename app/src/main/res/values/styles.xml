<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <dimen name="custom_design_fab_border_width">0.5dp</dimen>
    <dimen name="custom_design_fab_elevation">6dp</dimen>
    <dimen name="custom_design_fab_image_size">50dp</dimen>
    <dimen name="custom_design_fab_size_mini">40dp</dimen>
    <dimen name="custom_design_fab_size_normal">56dp</dimen>
    <dimen name="custom_design_fab_translation_z_hovered_focused">6dp</dimen>
    <dimen name="custom_design_fab_translation_z_pressed">6dp</dimen>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" name="Widget.Bindi.TextInputLayout">

    <item name="hintTextAppearance">@style/TextAppearance.Bindi.TextInputLayout.HintText</item>

    <item name="hintTextColor">@color/textColorPrimary</item>

    <item name="android:paddingBottom">8dp</item>

    <item name="boxStrokeColor">@color/textInputOutlineColor</item>

</style>

    <style parent="TextAppearance.MaterialComponents.Subtitle2" name="TextAppearance.Bindi.TextInputLayout.HintText">

    <item name="android:textColor">?android:attr/textColorPrimary</item>

</style>


    <style parent="Widget.MaterialComponents.Button" name="Widget.Bindi.Button">

    <item name="android:textColor">?android:attr/textColorPrimary</item>

    <item name="backgroundTint">?attr/colorAccent</item>


</style>


    <style parent="Widget.MaterialComponents.Button.TextButton" name="Widget.Bindi.Button.TextButton">

    <item name="android:textColor">?android:attr/textColorPrimary</item>

</style>
    <style name="Theme.Bindi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="n">true</item>
    </style>
    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="Widget.Design.CustomFloatingActionButtonBlue" parent="android:Widget">
        <item name="android:background">@drawable/custom_design_fab_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fabSize">auto</item>
        <item name="elevation">@dimen/custom_design_fab_elevation</item>
        <item name="hoveredFocusedTranslationZ">@dimen/custom_design_fab_translation_z_hovered_focused</item>
        <item name="pressedTranslationZ">@dimen/custom_design_fab_translation_z_pressed</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="borderWidth">@dimen/custom_design_fab_border_width</item>
        <item name="maxImageSize">@dimen/custom_design_fab_image_size</item>
        <item name="showMotionSpec">@anim/custom_design_fab_show_motion_spec</item>
        <item name="hideMotionSpec">@anim/custom_design_fab_hide_motion_spec</item>
    </style>
    <style name="Widget.Design.CustomFloatingActionButtonRed" parent="android:Widget">
        <item name="android:background">@drawable/custom_design_fab_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">#FF0000</item>
        <item name="fabSize">auto</item>
        <item name="elevation">@dimen/custom_design_fab_elevation</item>
        <item name="hoveredFocusedTranslationZ">@dimen/custom_design_fab_translation_z_hovered_focused</item>
        <item name="pressedTranslationZ">@dimen/custom_design_fab_translation_z_pressed</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="borderWidth">@dimen/custom_design_fab_border_width</item>
        <item name="maxImageSize">@dimen/custom_design_fab_image_size</item>
        <item name="showMotionSpec">@anim/custom_design_fab_show_motion_spec</item>
        <item name="hideMotionSpec">@anim/custom_design_fab_hide_motion_spec</item>
    </style>
</resources>